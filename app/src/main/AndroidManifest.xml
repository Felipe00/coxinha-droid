<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.interaje.felipe.coxinhadroid">

    <application
        android:allowBackup="true"
        android:name=".utils.CoxinhaApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Sugar ORM Meta-data Configuration -->

        <meta-data android:name="DATABASE" android:value="coxinha_droid.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="br.com.interaje.felipe.coxinhadroid.models" />

        <!-- End -->

        <activity android:name=".activities.MainActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activities.SignInActivity" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SignUpActivity" android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>